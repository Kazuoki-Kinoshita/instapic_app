<h1>投稿を編集する</h1>
<%= form_with(model: @picture, local: true) do |form| %>
  <div class="picture_content">
    <%= form.label :content %>
    <%= form.text_field :content %>
  </div>
  <div class="picture">
    <%= form.label :image %>
    <%= form.text_field :image %>
  </div>
  <%= form.submit %>
<% end %> 
<%= link_to "投稿一覧に戻る", pictures_path %>