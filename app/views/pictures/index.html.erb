<h1>投稿一覧</h1>
<table>
  <tr>
    <th>内容</th>
    <th>画像</th>
  </tr>
  <% @pictures.each do |picture| %>
    <tr>
      <td><%= picture.content %></td>
      <td><%= picture.image %></td>
      <td><%= link_to "詳細画面", picture_path(picture.id) %></td>
      <td><%= link_to "編集する", edit_picture_path(picture.id) %></td>
      <td><%= link_to "削除する", picture_path(picture.id), method: :delete %></td>
    </tr>
  <% end %>
</table>
<%= link_to "新規投稿する", new_picture_path %>