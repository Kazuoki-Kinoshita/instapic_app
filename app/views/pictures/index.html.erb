<h1>投稿一覧</h1>

<table>
  <tr>
    <th>内容</th>
    <th>投稿写真</th>
    <th>投稿者</th>
  </tr>
  <% @pictures.each do |picture| %>
    <tr>
      <td><%= picture.content %></td>
      <td><%= image_tag(picture.image.url) if picture.image.url %></td>
      <td><%= picture.user.user_name %></td>
      <td><%= link_to "詳細画面", picture_path(picture.id) %></td>
      <% if picture.user.id == current_user.id %>
        <td><%= link_to "編集する", edit_picture_path(picture.id), data: {confirm: "本当に編集しますか？"} %></td>
        <td><%= link_to "削除する", picture_path(picture.id), method: :delete, data: {confirm: "本当に削除しますか？"} %></td>
      <% end %>
    </tr>
  <% end %>
</table>