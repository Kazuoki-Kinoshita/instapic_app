<h1>投稿詳細</h1>
<p>内容</br>
<%= @picture.content %></p>
<p>投稿写真</br>
<%= image_tag(@picture.image.url) if @picture.image.url %></p>
<%= link_to "投稿一覧へ戻る", pictures_path %>
<% unless @picture.user_id == current_user.id %>
  <% if @favorite.present? %>
    <%= link_to "お気に入りを解除する", favorite_path(id: @favorite.id), method: :delete, class: "btn btn-danger" %>
  <% else %>
    <%= link_to "お気に入りをする", favorites_path(picture_id: @picture.id), method: :post, class: "btn btn-primary" %>
  <% end %>
<% end %>