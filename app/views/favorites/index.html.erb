<h1>お気に入りブログ一覧</h1>

<table>
  <tr>
    <th>内容</th>
    <th>画像</th>
    <th>投稿者</th>
  </tr>
  <% @favorites.each do |favorite| %>
    <tr>
      <td><%= favorite.picture.content %></td>
      <td><%= image_tag(favorite.picture.image.url) if favorite.picture.image.url %></td>
      <td><%= favorite.picture.user.user_name %></td>
      <td><%= link_to "お気に入りを解除する", favorite_path(id: favorite.id), method: :delete, class: "btn btn-danger" %></td>
    </tr>
  <% end %>
</table>